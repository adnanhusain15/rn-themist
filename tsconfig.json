{
    "compilerOptions": {
        "esModuleInterop": true,
        "declaration": true, /* Generates corresponding '.d.ts' file. */
        "jsx": "react-native",
        "lib": [
            "es6",
            "dom"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "target": "esnext",
        "types": [
            "react",
            "react-native",
            "node"
        ],
        "outDir": "dist"
    },
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js"
    ]
}